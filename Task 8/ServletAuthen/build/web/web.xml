<web-app>
<!-- AddCookieServlet mapping -->
 <servlet>
        <servlet-name>AddCookieServlet</servlet-name>
        <servlet-class>java.AddCookieServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>VerifyCookieServlet</servlet-name>
        <servlet-class>java.VerifyCookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddCookieServlet</servlet-name>
        <url-pattern>/s1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>VerifyCookieServlet</servlet-name>
        <url-pattern>/s2</url-pattern>
    </servlet-mapping>
<welcome-file-list>
    <welcome-file>addCookieServlet.html</welcome-file>
    <welcome-file>verifyCookieServlet.html</welcome-file>
</welcome-file-list>
</web-app>